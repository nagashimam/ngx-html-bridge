{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodeNext",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "nodeNext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests"]
}
